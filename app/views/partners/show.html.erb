<%- model_class = Partner -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @partner.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:home_url) %>:</strong></dt>
  <dd><%= link_to @partner.home_url, @partner.home_url %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              partners_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_partner_path(@partner), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              partner_path(@partner),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
